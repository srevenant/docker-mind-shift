#!/usr/bin/env python
# vim:set expandtab ts=4 sw=4 ai ft=python:

dtools = __import__("docker-tools")
import sys

def main():
    if len(sys.argv) == 0:
        sys.exit("Syntax: ds-log {svc-id|svc-name|container-id} [docker logs opts]")

    dtools.find_and_execv(sys.argv[0], ["docker", "logs"] + sys.argv[1:] + [None])

################################################################################
if __name__ == '__main__':
    main()
